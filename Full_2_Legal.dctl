// Full to Legal DCTL

__DEVICE__ float3 transform(int p_Width, int p_Height, int p_X, int p_Y, float p_R, float p_G, float p_B)
{

float r = p_R * (876.0f / 1023.0f) + (64.0f / 1023.0f);
float g = p_G * (876.0f / 1023.0f) + (64.0f / 1023.0f);
float b = p_B * (876.0f / 1023.0f) + (64.0f / 1023.0f);

return make_float3(r, g, b);
}
